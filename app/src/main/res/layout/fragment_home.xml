<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Título de la Aplicación -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Huella Carbono"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <!-- Descripción de la Huella de Carbono -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La huella de carbono es la cantidad de gases de efecto invernadero, específicamente dióxido de carbono, que se libera a la atmósfera como resultado de las actividades humanas. Este indicador es importante para conocer el impacto ambiental de nuestras acciones."
        android:textSize="16sp"
        android:layout_below="@id/tvAppTitle"
        android:layout_marginTop="16dp"
        android:textColor="#333333"
        android:layout_centerHorizontal="true" />

    <!-- Cuadro de Información sobre Tipos de Huella de Carbono -->
    <TextView
        android:id="@+id/tvTypesOfFootprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="En esta aplicación, puedes navegar para encontrar una calculadora de los siguientes tipos de huella de carbono:\n\n• Huella de carbono en el entorno familiar.\n• Huella de carbono en el transporte.\n• Huella de carbono en el estilo de vida."
        android:textSize="16sp"
        android:layout_below="@id/tvDescription"
        android:layout_marginTop="24dp"
        android:textColor="#444444"
        android:background="#e0e0e0"
        android:padding="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
